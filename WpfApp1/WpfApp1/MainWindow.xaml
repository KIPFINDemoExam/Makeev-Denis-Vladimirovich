<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid x:Name="listOfProducts">
        <ListBox x:Name="lstBox"></ListBox>
        <TextBox x:Name="search"  Text="Введите имя товара которое для поиска" TextChanged="Search_Product" />
        <Button Height="25" Content="Добавить товар" x:Name="Add" Margin="674,10,10,384" Click="Add_Product"/>
    </Grid>
</Window>
